<h3 class="header"><%= @project.name %></h3>
<br />
<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= @project.percent_done %>%;">
    <%= @project.percent_done.to_i %>%
  </div>
</div>
<br />
<table class="table table-striped">
  <tbody>
    <tr>
      <td>Goal description</td>
      <td><%= @project.goal_description %></td>
    </tr>
    <tr>
      <td>State</td>
      <td><%= @project.project_state.display_name %></td>
    </tr>
    <tr>
      <td>Soft deadline</td>
      <td><%= @project.soft_deadline %></td>
    </tr>
    <tr>
    <tr>
      <td>Hard deadline</td>
      <td><%= @project.hard_deadline %></td>
    </tr>
    <tr>
      <td>Remaining tasks</td>
      <td><%= @project.remaining_tasks %></td>
    </tr>
    <tr>
      <td>Created at</td>
      <td><%= @project.created_at.to_s(:db) %></td>
    </tr>
  </tbody>
</table>

<%= render :partial => 'tasks/tasks', locals: {tasks: tasks,  options: options } %>

<br />

<%= link_to fa_icon('pencil') + ' Edit', edit_project_path(@project), :class => 'btn btn-default' %>

<%= link_to fa_icon('check') + ' Complete', complete_project_path(@project), :class => 'btn btn-default' %>

<%= link_to fa_icon('times') + ' Destroy', project_path(@project),
                                          :method => 'delete',
                                          :data => { :confirm => 'Are you sure?' },
                                          :class => 'btn btn-default' %>
